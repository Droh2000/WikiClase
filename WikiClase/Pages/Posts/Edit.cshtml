@page
@model WikiClase.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.Id" />
            <div class="form-group">
                <label asp-for="Post.Titulo" class="control-label"></label>
                <input asp-for="Post.Titulo" class="form-control" />
                <span asp-validation-for="Post.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Contenido" class="control-label"></label>
                <input asp-for="Post.Contenido" class="form-control" />
                <span asp-validation-for="Post.Contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Autor" class="control-label"></label>
                <input asp-for="Post.Autor" class="form-control" />
                <span asp-validation-for="Post.Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Fecha" class="control-label"></label>
                <input asp-for="Post.Fecha" class="form-control" />
                <span asp-validation-for="Post.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.CategoriaId" class="control-label"></label>
                <select asp-for="Post.CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId">
                </select>
                <span asp-validation-for="Post.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.TagId" class="control-label"></label>
                <select asp-for="Post.TagId" class="form-control" asp-items="ViewBag.TagId">
                </select>
                <span asp-validation-for="Post.TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.nombreImagen" class="control-label"></label>
                <input asp-for="Post.nombreImagen" class="form-control" readonly/>
                <span asp-validation-for="Post.nombreImagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.rutaImagen" class="control-label"></label>
                <img src="~/Images/@Html.DisplayFor(model => model.Post.nombreImagen)" height="100" width="120" alt="@Html.DisplayFor(model => model.Post.nombreImagen)" />
                <span asp-validation-for="Post.rutaImagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="uploadfiles" />
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
