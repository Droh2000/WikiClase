@page
@model WikiClase.Pages.Categorias.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center m-3">Eliminar Categoria</h1>

<h3 class="text-center">¿Estás seguro de que quieres eliminar esto?</h3>
<br>
<div class="container">
    <dl class="row justify-content-md-center">
        <dt class="col-sm-2 col-md-auto">
            <p class="fs-5">@Html.DisplayNameFor(model => model.Categoria.nombreCategoria):</p>
        </dt>
        <dd class="col-sm-10 col-md-auto">
            <p class="fs-5">@Html.DisplayFor(model => model.Categoria.nombreCategoria)</p>
        </dd>
        <dt class="col-sm-2 col-md-auto">
            <p class="fs-5">@Html.DisplayNameFor(model => model.Categoria.descripcion):</p>
        </dt>
        <dd class="col-sm-10 col-md-auto">
            <p class="fs-5">@Html.DisplayFor(model => model.Categoria.descripcion)</p>
        </dd>
    </dl>
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <form method="post">
            <div class="d-flex justify-content-between">
                <div class="p-2">
                    <div class="form-group mt-2">
                        <a asp-page="./Index"><i class="bi bi-arrow-left-square-fill text-success fs-3"></i></a>
                    </div>
                </div>
                <div class="p-2">
                    <div class="form-group mt-2">
                        <input type="hidden" asp-for="Categoria.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
