@page
@model WikiClase.Pages.Categorias.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1 class="text-center m-3">Detalles</h1>
<hr />
<div class="container-fluid">
    <div class="row">
            <div class="row justify-content-md-center">
                <div class="col col-lg-2"></div>
                <div class="col-md-auto">
                <div class="card text-center p-2 border-1" style="background-color:#9BD0F2">
                    <div class="card-header" style="background-color:#97D2DB">
                        <h4>Categoria</h4>
                      </div>
                    <div class="card-body" style="background-color:#9BF2E6">
                        <br>
                        <h5 class="card-title">@Html.DisplayNameFor(model => model.Categoria.nombreCategoria)</h5>
                        <p class="card-text">@Html.DisplayFor(model => model.Categoria.nombreCategoria)</p>
                        <br>
                        <h5 class="card-title">@Html.DisplayNameFor(model => model.Categoria.descripcion)</h5>
                        <p class="card-text">@Html.DisplayFor(model => model.Categoria.descripcion)</p>
                        <br>
                      </div>
                    <div class="card-footer text-muted" style="background-color:#97D2DB">
                        <a asp-page="./Edit" asp-route-id="@Model.Categoria?.Id"><i class="bi bi-pencil-square text-warning fs-3"></i></a>
                        <a asp-page="./Index"><i class="bi bi-arrow-left-square-fill text-success fs-3"></i></a>
                      </div>
                    </div>
                </div>
                <div class="col col-lg-2"></div>
            </div>
    </div>
</div>
